#:kivy 2.2.1
#:import hex kivy.utils.get_color_from_hex

<SelectableLabelBoxLayaout>:

    # Draw a background to indicate selection
    
    canvas.before:
        Color:
            rgba: hex('#4C695E') if self.selected else hex('#0E1311')
        Rectangle:   
            pos: self.pos
            size: self.size
    Label:
        id: numero
        size_hint_x: 0.1 
        color: (0,0,0,1)
    Label:
        id: nombre_p
        size_hint_x: 0.4    
        color: (0,0,0,1)
    Label:
        id: cantidad_p
        size_hint_x: 0.1 
        color: (0,0,0,1)
    Label:
        id: precio_p
        size_hint_x: 0.2
        color: (0,0,0,1)
    Label:
        id: total_p
        size_hint_x: 0.2  
        color: (0,0,0,1)                 
<RV>:
    viewclass: 'SelectableLabelBoxLayaout'
    SelectableRecycleBoxLayout:
        padding: 0, 1, 0, 0
        spacing: .5
        default_size: None, dp(30)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False

<Labeloscuro@Label>:
    halign: 'center'
    valign: 'middle'
    text_size: self.size
    canvas.before:
        Color:
            rgba: hex('#1D2522')
        Rectangle:
            size: self.size
            pos: self.pos
    
<Botona@Button>
    size_hint: None, None
    size: 200, 50
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    background_color: hex ('#2E4744')
